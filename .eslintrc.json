{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "standard",
    "plugin:prettier/recommended"
  ],
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-console": "warn",
    "space-before-function-paren": "off"
  }
}
